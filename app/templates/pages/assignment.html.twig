{% extends 'page.html.twig' %}
{% block content %}
<div class='assignment-page'>
    <div class='col-lg-8 col-lg-offset-2'>
        <h2><small>Assignment &raquo;</small> <strong>{{ name }}</strong></h2>
        <p class='assignment-due'>Due: {{ due | date('l, M d') }}

        <div class='well'>
            <p>{{ summary }}</p>
        </div>

        <h3>Overview</h3>

        <div class='assignment-overview'>
            {{ content | raw }}
        </div>

        <h4>How I will Grade This</h4>

        <ol>
        {% for item in ruberick %}
            <li>{{ item}}</li>
        {% endfor %}
        </ol>
    </div>
</div>
{% endblock %}